<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tomaszkopacz.pulseoxymeter.activities.StartActivity">

    <Button
        android:id="@+id/paireddevicesBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/flatbtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="@string/start"
        android:textSize="@dimen/largefont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/largemargin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/margin"/>

    <Switch
        android:id="@+id/enablebtSwitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/largefont"
        android:text="@string/bt"
        android:fontFamily="casual"
        app:layout_constraintBottom_toTopOf="@+id/paireddevicesBTN"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/largemargin"
        android:layout_marginRight="@dimen/largemargin"
        android:layout_marginTop = "@dimen/margin" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/pulse"
        app:layout_constraintBottom_toTopOf="@+id/enablebtSwitch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/largemargin"
        android:layout_marginRight="@dimen/largemargin"
        android:layout_marginTop="@dimen/margin"/>

</android.support.constraint.ConstraintLayout>
